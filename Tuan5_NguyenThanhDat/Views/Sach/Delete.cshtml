@model Tuan5_NguyenThanhDat.Models.Sach

@{ ViewBag.Title = "Delete";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Xoá Thông Tin Sách</h2>

<h3>Bạn có chắc muốn xoá thông tin này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.maloai)
        </dd>

        <dt>
            Tên sách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tensach)
        </dd>

        <dt>
            Hình
        </dt>

        <dd>
            <td>
                <img src="@Model.hinh" alt="hinh thumbnail" width="250px" />
            </td>
        </dd>

        <dt>
            Giá bán 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.giaban)
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ngaycapnhat)
        </dd>

        <dt>
            Só lượng tồn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soluongton)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ListSach")
        </div>
     }
</div>
